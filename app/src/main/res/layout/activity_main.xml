<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_button"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/g_layout"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_inpput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="end"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="end"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="60sp" />
    </LinearLayout>


    <GridLayout
        android:background="@drawable/bg_button"
        android:id="@+id/g_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="UselessParent">

        <Button
            android:id="@+id/btn_c"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_hight"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_button"
            android:text="@string/c"
            android:textColor="@drawable/text_button" />

        <Button
            android:id="@+id/btn_ac"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_hight"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_button"
            android:text="@string/ac"
            android:textColor="@drawable/text_button" />




        <Button
            android:id="@+id/btn_div"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_hight"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_button"
            android:text="@string/division"
            android:textColor="@drawable/text_button" />

        <Button
            android:id="@+id/btn_7"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_hight"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_button"
            android:text="@string/_7"
            android:textColor="@drawable/text_button" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_hight"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_button"
            android:text="@string/_8"
            android:textColor="@drawable/text_button" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_hight"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_button"
            android:text="@string/_9"
            android:textColor="@drawable/text_button" />

        <Button
            android:id="@+id/btn_mul"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_hight"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_button"
            android:text="@string/multiply"
            android:textColor="@drawable/text_button" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_hight"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_button"
            android:text="@string/_4"
            android:textColor="@drawable/text_button" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_hight"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_button"
            android:text="@string/_5"
            android:textColor="@drawable/text_button" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_hight"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_button"
            android:text="@string/_6"
            android:textColor="@drawable/text_button" />

        <Button
            android:id="@+id/btn_minus"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_hight"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_button"
            android:text="@string/minus"
            android:textColor="@drawable/text_button" />

        <Button
            android:id="@+id/btn_1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_hight"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_button"
            android:text="@string/_1"
            android:textColor="@drawable/text_button" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_hight"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_button"
            android:text="@string/_2"
            android:textColor="@drawable/text_button" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_hight"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_button"
            android:text="@string/_3"
            android:textColor="@drawable/text_button" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_hight"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_button"
            android:text="@string/addition"
            android:textColor="@drawable/text_button" />

        <Button
            android:id="@+id/btn_0"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_hight"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_button"
            android:text="@string/_0"
            android:textColor="@drawable/text_button" />

        <Button
            android:id="@+id/btn_op"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_hight"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_button"
            android:text="@string/op"
            android:textColor="@drawable/text_button" />

        <Button
            android:id="@+id/btn_cl"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_hight"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_button"
            android:text="@string/cl"
            android:textColor="@drawable/text_button" />

        <Button
            android:id="@+id/btn_tol"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_hight"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="#FF5722"
            android:text="@string/total"
            android:textColor="@drawable/text_button" />

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>